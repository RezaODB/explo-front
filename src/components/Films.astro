---
const response = await fetch("https://explorationdumonde.be/api/films/2025");
const films = await response.json();
---

<section class="space-y-8 mt-8">

<h1 class="text-3xl uppercase row-span-full">Grand cycle</h1>

<div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    { films.map((film) =>
    <div class={film.cycle === 'grand' ? '' : 'hidden'}>
        <img src={'https://explorationdumonde.be/storage/' + film.banner}>
        <h2 class="font-bold">{film.title}</h2>
    </div>
    )}
</div>

<h1 class="text-3xl uppercase">Cycle découverte</h1>

<div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    { films.map((film) =>
    <div class={film.cycle === 'découverte' ? '' : 'hidden'}>
        <img src={'https://explorationdumonde.be/storage/' + film.banner}>
        <h2 class="font-bold">{film.title}</h2>
    </div>
    )}
</div>

</section>