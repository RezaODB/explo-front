---
import "../styles/global.css";
import Logo from '../assets/logo.svg';
import Logo75 from '../assets/logo75.svg';
const { pathname } = Astro.url;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Exploration du Monde</title>
	</head>
	<body class="max-w-7xl mx-auto p-4 space-y-4 text-sky-950 bg-yellow-50/10">
		<header>
			<div class="flex items-center justify-center relative pb-4">
				<a href="/"><Logo class="max-h-16 w-auto" /></a>
				<div class="bg-yellow-100 rotate-6 h-20 w-20 flex justify-center items-center rounded-full absolute right-0">
					<Logo75 class="size-13"/>	
				</div>
			</div>
			<div class="flex items-center border-y border-sky-950 uppercase font-bold">
				<a href="/" class:list={ pathname === '/' ? 'bg-sky-950 text-white' : ''} class="py-1 px-4">Home</a>
				<a href="/films" class:list={ pathname === '/films' ? 'bg-sky-950 text-white' : ''} class="py-1 px-4">Les films</a>
				<a href="/agenda" class:list={ pathname === '/agenda' ? 'bg-sky-950 text-white' : ''} class="py-1 px-4">Agenda</a>
				<a href="/apropos" class:list={ pathname === '/apropos' ? 'bg-sky-950 text-white' : ''} class="py-1 px-4">A propos</a>
				<a href="/contact" class:list={ pathname === '/contact' ? 'bg-sky-950 text-white' : ''} class="py-1 px-4">Contact</a>
			</div>
		</header>
		<main>
			<slot />
		</main>
		<footer></footer>
	</body>
</html>
