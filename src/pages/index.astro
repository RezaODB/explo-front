---
import Layout from '../layouts/Layout.astro';
import teaser from '../assets/teaser2025.mp4'
const response = await fetch("https://explorationdumonde.be/api/films/2025");
const films = await response.json();
---

<Layout>
	<div class="grid grid-cols-1 lg:grid-cols-4 gap-y-4">

		<div class="col-span-3 space-y-4 lg:pr-4 relative">
			<h1 class="text-[10vw] font-black uppercase absolute top-4 left-4 tracking-tighter leading-[0.8] mix-blend-overlay text-white">Explo Nouvelle Saison 2025/2026</h1>
			<video src={teaser} autoplay muted loop></video>
		</div>

		<div class="lg:border-l border-sky-950 lg:pl-4 space-y-4">
			<h2 class="text-2xl font-black">Le Grand Cycle</h2>
			<div class="divide-y divide-sky-950 py-2">
				{ films.map((film) =>
				<div class={film.cycle === 'grand' ? 'hover:bg-sky-50' : 'hidden'}>
					<a href="">{film.title}</a>
				</div>
				)}
			</div>
			<h2 class="text-2xl font-black">Le Cycle Découverte</h2>
			<div class="divide-y divide-sky-950 py-2">
				{ films.map((film) =>
				<div class={film.cycle === 'découverte' ? 'hover:bg-sky-50' : 'hidden'}>
					<a href="">{film.title}</a>
        		</div>
    			)}
			</div>
		</div>

	</div>
</Layout>
